<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.com.myapplication.MainActivity">
    <!--
    AppBar应用导航条，控制条

    -->
<android.support.v4.view.ViewPager
    android:id="@+id/teach_content"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
    <RadioGroup
        android:id="@+id/teach_controller"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >
    <RadioButton
        android:id="@+id/teach_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="信息"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/wechat"
        android:textSize="12dp"
        android:layout_weight="1"
        />
    <RadioButton
        android:id="@+id/teach_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="知识问答"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/home"
        android:textSize="12dp"
        android:layout_weight="1"/>
    <RadioButton
        android:id="@+id/teach_discover"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="发现"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/find"
        android:textSize="12dp"
        android:layout_weight="1"/>
    <RadioButton
        android:id="@+id/teach_mine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="我"
        android:button="@null"
        android:gravity="center"
        android:drawableTop="@drawable/mine"
        android:textSize="12dp"
        android:layout_weight="1"/>
    </RadioGroup>


</LinearLayout>
